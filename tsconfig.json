{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"],
            "@components/*": ["resources/ts/components/*"],
            "@views/*": ["resources/ts/views/*"],
            "@layouts/*": ["resources/ts/layouts/*"],
            "@interfaces/*": ["resources/ts/interfaces/*"],
            "@transitions/*": ["resources/ts/transitions/*"],
            "@services/*": ["resources/ts/services/*"]
        }
    },
    "include": ["resources/ts/**/*.ts", "resources/ts/**/*.vue"],
    "exclude": ["node_modules"]
}
