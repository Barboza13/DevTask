{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"],
            "@components/*": ["resources/ts/components/*"],
            "@views/*": ["resources/ts/views/*"],
            "@layouts/*": ["resources/ts/layouts/*"],
            "@interfaces/*": ["resources/ts/interfaces/*"],
            "@transitions/*": ["resources/ts/transitions/*"],
            "@assets/*": ["resources/ts/assets/*"],
            "@icons/*": ["resources/ts/assets/icons/*"],
            "@services/*": ["resources/ts/services/*"],
            "@stores/*": ["resources/ts/stores/*"]
        }
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.vue",
        "src/**/*",
        "svg.d.ts"
    ],
    "exclude": ["node_modules"]
}
